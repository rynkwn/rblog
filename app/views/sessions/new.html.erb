<h1>Log In</h1>

<%= form_for(:session, url: login_path, html: {class: 'form'})do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  
  <%= hidden_field_tag 'intended_route', params[:intended_route] %>
  
  <%= f.submit "Log in!", class: "btn-primary" %>
<% end %>

<!--------------------------------------->

<p class='center bold'>
  <br>
  Don't have an account?
  
  <%= form_tag(new_user_path, :method => "get", class: "navbar-form center") do %>
    <%= hidden_field_tag 'intended_route', params[:intended_route] %>
    <div class="input-append">
      <button class="btn btn-success btn-md" type="submit">Sign up!</button>
    </div>
  <% end %>
</p>

