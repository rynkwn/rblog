<h1>Log In</h1>

<%= form_for(:session, url: login_path, html: {class: 'form'})do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  
  <%= f.submit "Log in!", class: "btn-primary" %>
<% end %>
